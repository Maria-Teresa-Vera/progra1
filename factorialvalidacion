// factorialvalidacion.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

void main()
{
	int factorial,i,n;
	factorial=1;
	do {
		cout<<"Ingrese el valor n en:";
		cin>>n;
	} while (n<0);
	for (i=2;i<=n;i++)
		factorial=factorial*i;
	cout<< "El factorial de "<<n<<"es:"<<factorial;
	getch();
}
