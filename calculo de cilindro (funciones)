// calcular cilindro (funciones).cpp : Defines the entry point for the console application.
//se ingresan como datos de entrada su radio y su altura

#include "stdafx.h"
#include <iostream>
#include "conio.h"

float vol_cilindro(float r, float a);

using namespace std;
int main()
{
    float radio, altura, volumen; //prototipo de la funcion	
    cout <<"Ingrese el radio:" ; cin >>radio;	
    cout <<"Ingrese la altura:"; cin >> altura;	
    volumen= vol_cilindro(radio,altura); //Llamada a la funcion
    cout <<"El volumen es:" <<volumen; 
	getch();
    return 0; 
 }

// Declaracion  o definicion de la funcion
float vol_cilindro (float r, float a)
	{ 
	 float v= 3.141516*r*r*a ;	
	return v;
	}
